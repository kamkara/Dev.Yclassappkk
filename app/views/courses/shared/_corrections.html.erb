<!-- Essential  Feature-->
<input type="checkbox" id="exercice-modal" class="modal-toggle"/>
<div class="modal modal-bottom sm:modal-middle" ">
    <div class="modal-box md:w-10/12 md:max-w-4xl text-white bg-black border">
        <div class="flex max-w-screen mx-auto">
            <div class="mx-auto">
                <h1 class="flex items-center">Les exercices de la léçons</h1>
            </div>
            <% if current_user_status == "team" || "teacher"  %>

                <%#= link_to new_course_exercice_path(course), class:"ln-btn-color ln-btn-hover-color flex" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewBox="0 0 512 512" style="enable-background:new 0 0 512 512;" xml:space="preserve" width="16px" height="16px" class="bg-white rounded-md px-1">
                        <g><path d="M480,224H288V32c0-17.673-14.327-32-32-32s-32,14.327-32,32v192H32c-17.673,0-32,14.327-32,32s14.327,32,32,32h192v192   c0,17.673,14.327,32,32,32s32-14.327,32-32V288h192c17.673,0,32-14.327,32-32S497.673,224,480,224z"/></g>
                    </svg>
                    <span tabindex="0" class="mx-2">Créer</span>
                <%# end %>
            <% end %>
        </div>
        <%# course.exercices.each do |exercice| %>
            <div tabindex="0" class="collapse border rounded-md my-4">
                <div class="collapse-title text-xl font-medium">
                    <%#= exercice.name %>
                    -
                    <small class="ln-btn-color ln-btn-hover-color text-sm py-1 ">Voir plus</small>
                </div>
                <div class="collapse-content">
                    <%#= exercice.content %>

                </div>
                <div class="flex flex-row my-5 mt-5">
                    <div class="basis-1/3"></div>
                    <div class="basis-1/3">
                        <%#= link_to 'Accéder à la corréction', exercice_path(exercice), class:"ln-btn-color ln-btn-hover-color py-2 px-4" %>

                    </div>
                    <div class="basis-1/3"></div>
                </div>
            </div>
        <%# end %>


        <div class="modal-action pb-4">
            <label for="exercice-modal" class="btn btn-sm btn-circle absolute ">✕</label>
        </div>
    </div>
</div>

