
<%= render "homepage/feed/navbar" %>

<div class="mx-auto  mt-20 md:w-2/4 w-full flex">
  <div class="mx-auto">
    
    <%= render @course %>

    <% if current_user_status == "team" || "teacher"  %>
      <div class="">
        <%= link_to 'Modifier', edit_course_path(@course), class: "mt-2 rounded-lg py-2 px-5 bg-gray-50 inline-block font-medium" %>
        <div class="inline-block ml-2">
          <%= button_to 'Supprimer', course_path(@course), method: :delete, class: "mt-2 rounded-lg py-2 px-5 bg-gray-50 font-medium" %>
        </div>
      </div>
    <% end %>
    
  </div>
</div>


