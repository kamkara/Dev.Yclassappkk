

<div id="<%= dom_id course %>" class="border bg-white p-2">
  <% @title=course.title %>
  <div class="flex">
    <div class="">
    	<%= link_to sanitize("&larr;"), root_path, class:"text-2xl" %>
    </div>

    <div class="flex my-4">
      <h1 class="font-bold text-xl md:text-2xl"><%= course.title %></h1>
    </div>
  </div>

      <!-- Items of course -->
    <div class="m-2">
      <div class="text-md">
        <%= course.content %>
      </div>
      <div class="border-t mt-2">
        <div class="flex justify-between my-1">
          <%= render "courses/shared/exercises", course: @course %>
          <%= render "courses/shared/corrections", course: @course %>
        </div>
		  </div>
    </div>
</div>
